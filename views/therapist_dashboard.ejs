<!DOCTYPE html>
<html>
<head>
  <title>Physiotherapist Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<body>
  <h1>Physiotherapist Dashboard</h1>
  <% if (messages.success) { %><p class="success"><%= messages.success %></p><% } %>
  <form method="GET" action="/therapist/dashboard">
    <input type="text" name="search" placeholder="Search patients">
    <button type="submit">Search</button>
  </form>
  <table>
    <tr><th>Name</th><th>NHS Number</th><th>Illness</th><th>Attended</th><th>Action</th></tr>
    <% patients.forEach(p => { %>
      <tr>
        <td><%= p.name %> <%= p.surname %></td>
        <td><%= p.nhs_number %></td>
        <td><%= p.illness %></td>
        <td><%= p.attended ? 'Yes' : 'No' %></td>
        <td><a href="/therapist/patient/<%= p.id %>">View/Assign</a></td>
      </tr>
    <% }); %>
  </table>
  <br>
  <a href="/">Home</a>
</body>