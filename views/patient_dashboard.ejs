<!DOCTYPE html>
<html>
<head>
  <title>Patient Dashboard</title>
  <link rel="stylesheet" href="/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

</head>
<body>
  <h1>NHS PhysioHUB</h1>
  <hr>
  <h2>Patient Dashboard</h2>
  <% if (messages.success) { %><p class="success"><%= messages.success %></p><% } %>
  
  <% if (!patient.illness) { %>
    <h2>Submit Your Illness Description</h2>
    <form method="POST" action="/patient/illness">
      <textarea name="illness" placeholder="Describe your illness" required></textarea>
      <button type="submit">Submit</button>
    </form>
  <% } else if (!patient.attended) { %>
    <h2>Status: Awaiting Appointment</h2>
    <p>Waiting for your physiotherapist to assign a treatment plan.</p> <br>
  <% } else if (treatment) { %>
    <h2>Ongoing Treatment</h2> <br>
    <p>Timing: <%= treatment.timing %></p> <br>
    <p>Progression: <%= treatment.progression %></p> <br>
    <h3>Exercises</h3>
    <ul>
      <% exercises.forEach(ex => { 
            let params = {};
            try { 
                params = JSON.parse(ex.checklist); 
            } catch (e) { 
                console.error("Could not parse checklist for exercise:", ex.name, e);
            }
        %>
        <li>
                    <a href="/exercise/<%= ex.id %>"><strong><%= ex.name %></strong></a>
          <br>
                    <img src="/exercises/img/<%= ex.illustration_sequence %>.jpg" alt="<%= ex.name %>" style="max-width: 150px; display: block; margin: 5px 0;">
          <p>Instructions: <%= ex.description %></p>
          
          <h4>Prescription Details:</h4>
          <p>
                <strong>Movement/Duration:</strong> <%= params.duration || 'N/A' %> 
                <br>
                <strong>Repetition/Sets:</strong> <%= params.reps || 'N/A' %> 
                <br>
                <strong>Weekly Sessions:</strong> <%= params.perWeek || 'N/A' %> 
          </p>
        </li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>Your current status is ready for treatment, but no exercises have been assigned by your physiotherapist yet.</p>
  <% } %>
  <br>
  <a href="/">Home</a>
</body>
</html>